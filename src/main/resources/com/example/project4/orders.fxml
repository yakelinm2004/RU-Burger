<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.project4.controller.OrdersController" prefWidth="500" prefHeight="400">
    <top>
        <Label text="Past Orders" style="-fx-font-size: 18px; -fx-padding: 10;"/>
    </top>

    <center>
        <ListView fx:id="ordersListView" />
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Button text="Export to File" onAction="#exportToFile"/>
            <Button text="Cancel Selected Order" onAction="#cancelSelectedOrder"/>
        </HBox>
    </bottom>
</BorderPane>

